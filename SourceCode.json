  "system_architecture": {
    "layers": [
      {
        "name": "Presentation Layer",
        "components": ["Next.js Frontend", "Mobile Web Views", "Admin Dashboard"],
        "responsibility": "User interface, client-side logic, responsive design"
      },
      {
        "name": "API Gateway Layer",
        "components": ["API Gateway", "Load Balancer", "Rate Limiter"],
        "responsibility": "Request routing, authentication, rate limiting"
      },
      {
        "name": "Business Logic Layer",
        "components": ["Bond Service", "Trading Service", "Analytics Service", "AI Service"],
        "responsibility": "Core business logic, data processing, calculations"
      },
      {
        "name": "Integration Layer",
        "components": ["Broker Integration", "Payment Gateway", "Market Data Aggregator"],
        "responsibility": "External API integration, data synchronization"
      },
      {
        "name": "Data Layer",
        "components": ["MongoDB", "Redis Cache", "File Storage"],
        "responsibility": "Data persistence, caching, document storage"
      },
      {
        "name": "Blockchain Layer",
        "components": ["Smart Contracts", "Token Management", "Transaction Handler"],
        "responsibility": "Bond tokenization, blockchain transactions"
      }
    ]
  },
