  "database_schema": {
    "collections": {
      "users": {
        "description": "User accounts and profiles",
        "fields": {
          "_id": "ObjectId - Primary key",
          "email": "String - Unique email",
          "password": "String - Hashed password",
          "name": "String - Full name",
          "phone": "String - Phone number",
          "kyc_status": "String - pending|verified|rejected",
          "kyc_documents": "Array - Document references",
          "wallet_address": "String - Blockchain wallet",
          "subscription_tier": "String - free|basic|premium|enterprise",
          "subscription_expiry": "Date - Subscription end date",
          "broker_accounts": "Array - Linked broker accounts",
          "api_key": "String - Custom API key",
          "api_secret": "String - Hashed API secret",
          "preferences": "Object - User preferences",
          "created_at": "Date - Account creation",
          "updated_at": "Date - Last update"
        },
        "indexes": ["email", "wallet_address", "subscription_tier"]
      },
      "bonds": {
        "description": "Infrastructure bond listings",
        "fields": {
          "_id": "ObjectId - Primary key",
          "bond_id": "String - Unique bond identifier",
          "issuer": "String - Bond issuer name",
          "project_name": "String - Infrastructure project",
          "project_type": "String - road|bridge|airport|port|energy",
          "token_symbol": "String - Blockchain token symbol",
          "contract_address": "String - Smart contract address",
          "face_value": "Number - Bond face value",
          "coupon_rate": "Number - Interest rate percentage",
          "maturity_date": "Date - Bond maturity",
          "issue_date": "Date - Issue date",
          "total_supply": "Number - Total bonds available",
          "available_supply": "Number - Bonds available for trading",
          "minimum_investment": "Number - Minimum purchase amount",
          "risk_category": "String - low|medium|high",
          "credit_rating": "String - AAA|AA|A|BBB etc",
          "status": "String - active|closed|matured",
          "documents": "Array - Legal documents",
          "metadata": "Object - Additional details",
          "created_at": "Date",
          "updated_at": "Date"
        },
        "indexes": ["bond_id", "issuer", "status", "risk_category"]
      },
      "transactions": {
        "description": "All trading transactions",
        "fields": {
          "_id": "ObjectId - Primary key",
          "transaction_id": "String - Unique transaction ID",
          "user_id": "ObjectId - Reference to user",
          "bond_id": "ObjectId - Reference to bond",
          "type": "String - buy|sell|transfer",
          "quantity": "Number - Number of bonds",
          "price": "Number - Transaction price per bond",
          "total_amount": "Number - Total transaction value",
          "fees": "Number - Platform fees",
          "payment_method": "String - e-rupees|wallet",
          "payment_status": "String - pending|completed|failed",
          "blockchain_tx_hash": "String - Blockchain transaction hash",
          "broker_reference": "String - Broker transaction ID (if applicable)",
          "timestamp": "Date - Transaction timestamp",
          "settlement_date": "Date - Settlement date",
          "metadata": "Object - Additional transaction data"
        },
        "indexes": ["transaction_id", "user_id", "bond_id", "timestamp", "payment_status"]
      },
      "portfolios": {
        "description": "User portfolio holdings",
        "fields": {
          "_id": "ObjectId - Primary key",
          "user_id": "ObjectId - Reference to user",
          "holdings": "Array - [{bond_id, quantity, avg_price, current_value}]",
          "total_investment": "Number - Total amount invested",
          "current_value": "Number - Current portfolio value",
          "total_returns": "Number - Profit/Loss",
          "return_percentage": "Number - ROI percentage",
          "updated_at": "Date - Last calculation"
        },
        "indexes": ["user_id"]
      },
      "subscriptions": {
        "description": "Subscription plan details and history",
        "fields": {
          "_id": "ObjectId - Primary key",
          "user_id": "ObjectId - Reference to user",
          "plan_type": "String - basic|premium|enterprise",
          "billing_cycle": "String - monthly|yearly",
          "amount": "Number - Subscription amount",
          "start_date": "Date - Subscription start",
          "end_date": "Date - Subscription end",
          "auto_renew": "Boolean - Auto renewal flag",
          "payment_id": "String - Payment reference",
          "status": "String - active|expired|cancelled",
          "features": "Array - List of enabled features"
        },
        "indexes": ["user_id", "status", "end_date"]
      },
      "broker_accounts": {
        "description": "Linked broker account information",
        "fields": {
          "_id": "ObjectId - Primary key",
          "user_id": "ObjectId - Reference to user",
          "broker_name": "String - Broker name (Dhan|AngelOne|Zerodha etc)",
          "broker_user_id": "String - Broker account ID",
          "api_key": "String - Encrypted broker API key",
          "api_secret": "String - Encrypted broker API secret",
          "access_token": "String - OAuth access token",
          "is_active": "Boolean - Account active status",
          "last_sync": "Date - Last synchronization",
          "created_at": "Date"
        },
        "indexes": ["user_id", "broker_name"]
      },
      "analytics": {
        "description": "AI-generated analytics and predictions",
        "fields": {
          "_id": "ObjectId - Primary key",
          "bond_id": "ObjectId - Reference to bond",
          "prediction_date": "Date - When prediction was made",
          "expected_return": "Number - Predicted return percentage",
          "risk_score": "Number - AI-calculated risk (0-100)",
          "confidence_level": "Number - Prediction confidence (0-1)",
          "market_sentiment": "String - positive|neutral|negative",
          "recommended_action": "String - buy|hold|sell",
          "factors": "Array - Factors affecting prediction",
          "historical_accuracy": "Number - Past prediction accuracy",
          "valid_until": "Date - Prediction validity"
        },
        "indexes": ["bond_id", "prediction_date"]
      },
      "paper_trades": {
        "description": "Paper trading (practice) transactions",
        "fields": {
          "_id": "ObjectId - Primary key",
          "user_id": "ObjectId - Reference to user",
          "bond_id": "ObjectId - Reference to bond",
          "type": "String - buy|sell",
          "quantity": "Number - Number of bonds",
          "price": "Number - Trade price",
          "virtual_balance": "Number - User's practice balance",
          "timestamp": "Date - Trade timestamp",
          "pnl": "Number - Profit and Loss"
        },
        "indexes": ["user_id", "timestamp"]
      },
      "api_usage": {
        "description": "Custom API usage tracking",
        "fields": {
          "_id": "ObjectId - Primary key",
          "user_id": "ObjectId - Reference to user",
          "api_key": "String - API key used",
          "endpoint": "String - API endpoint called",
          "method": "String - HTTP method",
          "request_count": "Number - Number of requests",
          "timestamp": "Date - Request time",
          "response_time": "Number - Response time in ms",
          "status_code": "Number - HTTP status code"
        },
        "indexes": ["user_id", "timestamp", "api_key"]
      }
    }
  },
